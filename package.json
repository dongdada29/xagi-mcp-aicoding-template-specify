{
  "name": "@xagi/create-ai-project",
  "version": "1.0.0",
  "description": "AI Project Initialization Template Tool - CLI for creating standardized project structures",
  "main": "src/cli/index.js",
  "bin": {
    "create-ai-project": "./src/cli/index.js",
    "@xagi/create-ai-project": "./src/cli/index.js"
  },
  "scripts": {
    "start": "node src/cli/index.js",
    "dev": "nodemon src/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:contract": "jest tests/contract",
    "test:performance": "jest tests/performance",
    "test:security": "jest tests/security",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "prepare": "husky install",
    "build": "echo 'No build step required for CLI tool'"
  },
  "keywords": [
    "cli",
    "template",
    "project-generator",
    "npm",
    "git",
    "react",
    "nextjs",
    "vue",
    "nodejs",
    "ai"
  ],
  "author": "XAGI Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.0",
    "express": "^4.18.0",
    "fs-extra": "^11.1.0",
    "glob": "^10.3.0",
    "inquirer": "^9.2.0",
    "ora": "^7.0.0",
    "semver": "^7.5.0",
    "simple-git": "^3.20.0",
    "table": "^6.8.0",
    "tempy": "^3.0.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "memory-fs": "^0.5.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "src/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xagi/create-ai-project.git"
  },
  "bugs": {
    "url": "https://github.com/xagi/create-ai-project/issues"
  },
  "homepage": "https://github.com/xagi/create-ai-project#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/cli/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(chalk|commander|execa|inquirer|ora|tempy|fs-extra|glob|simple-git|table|yaml|ajv|axios|semver|memory-fs)/)"
    ],
    "moduleNameMapper": {
      "^chalk$": "<rootDir>/node_modules/chalk/source/index.js",
      "^tempy$": "<rootDir>/node_modules/tempy/index.js",
      "^memory-fs$": "<rootDir>/node_modules/memory-fs/lib/MemoryFileSystem.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format:check",
      "pre-push": "npm test"
    }
  }
}
